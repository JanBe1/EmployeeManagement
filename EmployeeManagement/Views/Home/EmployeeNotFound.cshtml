    ViewBag.Title = "404 Error";
} 

<div class="alert alert-danger" mt-1 mb-1>
    <h4>404 Not Found Error</h4>
    <hr />
    <h5>Employee with Id = @Model cannot be found </h5>
</div>
<a asp-action="index" asp-controller="home" class="btn btn-outline-danger" style="width:auto">Go back to list of Employees</a>